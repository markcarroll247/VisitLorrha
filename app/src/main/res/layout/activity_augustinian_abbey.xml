<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mark.visitlorrha.AugustinianAbbey">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/greenbar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:maxHeight="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/viewPageAndroidDominicanAbbey"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewLocationAugustinianAbbey"
        android:src="@drawable/ic_location_on_white_24dp"
        android:layout_marginStart="25dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewAudioGuideAugustinianAbbey"
        android:src="@drawable/ic_headset_white_24dp"
        android:layout_marginLeft="35dp"
        android:layout_alignTop="@+id/imageViewLocationAugustinianAbbey"
        android:layout_toEndOf="@+id/imageViewLocationAugustinianAbbey" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewReviewAugustinianAbbey"
        android:src="@drawable/ic_rate_white_24dp"
        android:layout_marginEnd="41dp"
        android:layout_alignTop="@+id/imageViewAudioGuideAugustinianAbbey"
        android:layout_toStartOf="@+id/imageViewPhotosphereAugustinianAbbey" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewPhotosphereAugustinianAbbey"
        android:src="@drawable/ic_photosphereicon_white_24dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="29dp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPageAndroidAugustinianAbbey"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageViewLocationAugustinianAbbey"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A much more welcome and peaceful group of newcomers arrived in Lorrha in the 12th century, these were the priors who were devoted to Saint Augustine. The ...Read More"
        android:id="@+id/textViewDescriptionOfAugustinianAbbey"
        android:layout_below="@+id/viewPageAndroidAugustinianAbbey"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Reviews"
        android:id="@+id/readReviewsButtonAugustinianAbbey"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/averageRatingBarAugustinianAbbey"
        android:isIndicator="true"
        android:layout_above="@+id/readReviewsButtonAugustinianAbbey"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOverViewOfAugustinianAbbey"
        android:text="Augustinian Abbey"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/averageRatingBarAugustinianAbbey"
        android:layout_alignParentStart="true" />

</RelativeLayout>
