<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RedwoodCastle">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/greenbar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:maxHeight="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/viewPageAndroidDominicanAbbey"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewLocationRedwoodCastle"
        android:src="@drawable/ic_location_on_white_24dp"
        android:layout_marginStart="25dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewAudioGuideRedwoodCastle"
        android:src="@drawable/ic_headset_white_24dp"
        android:layout_above="@+id/viewPageAndroidRedwoodCastle"
        android:layout_toEndOf="@+id/imageViewLocationRedwoodCastle"
        android:layout_marginStart="46dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewReviewRedwoodCastle"
        android:src="@drawable/ic_rate_white_24dp"
        android:layout_marginEnd="38dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toStartOf="@+id/imageViewPhotosphereRedwoodCastle" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewPhotosphereRedwoodCastle"
        android:src="@drawable/ic_photosphereicon_white_24dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="29dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPageAndroidRedwoodCastle"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageViewLocationRedwoodCastle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Situated by the Shannon banks, Redwood Castle was originally built by the Normans in the 12th century. The McEgans received the Castle from the ...Read More"
        android:id="@+id/textViewDescriptionOfRedwoodCastle"
        android:layout_below="@+id/viewPageAndroidRedwoodCastle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Reviews"
        android:id="@+id/readReviewsButtonRedwoodCastle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/averageRatingBarRedwoodCastle"
        android:isIndicator="true"
        android:layout_above="@+id/readReviewsButtonRedwoodCastle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOverViewOfRedwoodCastle"
        android:text="Redwood Castle has an average rating of "
        android:layout_above="@+id/averageRatingBarRedwoodCastle"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
