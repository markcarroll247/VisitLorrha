<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mark.visitlorrha.StRuadhansAbbey">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/greenbar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:maxHeight="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/viewPageAndroidDominicanAbbey"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewLocationStRuadhansAbbey"
        android:src="@drawable/ic_location_on_white_24dp"
        android:layout_alignTop="@+id/imageViewAudioGuideStRuadhansAbbey"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewAudioGuideStRuadhansAbbey"
        android:src="@drawable/ic_headset_white_24dp"
        android:layout_alignTop="@+id/imageViewReviewStRuadhansAbbey"
        android:layout_toEndOf="@+id/imageViewLocationStRuadhansAbbey"
        android:layout_marginStart="34dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewReviewStRuadhansAbbey"
        android:src="@drawable/ic_rate_white_24dp"
        android:layout_marginEnd="35dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toStartOf="@+id/imageViewPhotosphereStRuadhansAbbey" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewPhotosphereStRuadhansAbbey"
        android:src="@drawable/ic_photosphereicon_white_24dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="29dp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPageAndroidStRuadhansAbbey"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/imageViewLocationStRuadhansAbbey"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="St. Ruadhan was first to put Lorrha on the map coming here in the middle of the 6th century. He was educated in Clonard Co. Westmeath by St. Finian and was known as...Read More "
        android:id="@+id/textViewDescriptionOfStRuadhansAbbey"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/viewPageAndroidStRuadhansAbbey"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Reviews"
        android:id="@+id/readReviewsButtonStRuadhansAbbey"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/averageRatingBarStRuadhansAbbey"
        android:isIndicator="true"
        android:layout_above="@+id/readReviewsButtonStRuadhansAbbey"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOverViewOfStRuadhansAbbey"
        android:text="St. Ruadhan's Abbey has an average rating of "
        android:layout_above="@+id/averageRatingBarStRuadhansAbbey"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
