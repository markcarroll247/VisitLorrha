<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mark.visitlorrha.LackeenCastle">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/greenbar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:maxHeight="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/viewPageAndroidDominicanAbbey"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewLocationLackeenCastle"
        android:src="@drawable/ic_location_on_white_24dp"
        android:layout_marginStart="25dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewAudioGuideLackeenCastle"
        android:src="@drawable/ic_headset_white_24dp"
        android:layout_marginStart="45dp"
        android:layout_alignTop="@+id/imageViewLocationLackeenCastle"
        android:layout_toEndOf="@+id/imageViewLocationLackeenCastle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewReviewLackeenCastle"
        android:src="@drawable/ic_rate_white_24dp"
        android:layout_marginEnd="41dp"
        android:layout_above="@+id/viewPageAndroidLackeenCastle"
        android:layout_toStartOf="@+id/imageViewPhotosphereLackeenCastle" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewPhotosphereLackeenCastle"
        android:src="@drawable/ic_photosphereicon_white_24dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="29dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPageAndroidLackeenCastle"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageViewLocationLackeenCastle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This tower house was constructed in the 16th century by Brian O’Kennedy, who was head of the O’Kennedy Fionn (fair) branch of the clan at the time. A defensive wall...Read More "
        android:id="@+id/textViewDescriptionOfLackeenCastle"
        android:layout_below="@+id/viewPageAndroidLackeenCastle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Reviews"
        android:id="@+id/readReviewsButtonLackeenCastle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/averageRatingBarLackeenCastle"
        android:isIndicator="true"
        android:layout_above="@+id/readReviewsButtonLackeenCastle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOverViewOfLackeenCastle"
        android:text="Lackeen Castle has an average rating of "
        android:layout_above="@+id/averageRatingBarLackeenCastle"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
